{
    "name": "easycorp/easy-security-bundle",
    "type": "symfony-bundle",
    "description": "Useful security-related shortcuts for Symfony applications",
    "keywords": ["dx", "security", "symfony"],
    "homepage": "https://github.com/EasyCorp/easy-security-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Javier Eguiluz",
            "email": "javiereguiluz@gmail.com"
        },
        {
            "name": "Project Contributors",
            "homepage": "https://github.com/EasyCorp/easy-security-bundle"
        }
    ],
    "require": {
        "php"                           : ">=7.1",
        "symfony/config"                : "^3.2",
        "symfony/dependency-injection"  : "^3.2",
        "symfony/http-foundation"       : "^3.2",
        "symfony/http-kernel"           : "^3.2",
        "symfony/security"              : "^3.2",
        "symfony/security-bundle"       : "^3.2",
        "mmoreram/base-bundle"          : "^1.0.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer"     : "^1.12.4",
        "phpunit/phpunit"               : "^5.6.4"
    },
    "autoload": {
        "psr-4": {
            "EasyCorp\\Bundle\\EasySecurityBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    }
}
