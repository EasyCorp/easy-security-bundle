{
    "name": "easycorp/easy-security-bundle",
    "type": "symfony-bundle",
    "description": "Useful security-related shortcuts for Symfony applications",
    "keywords": ["dx", "security", "symfony"],
    "homepage": "https://github.com/EasyCorp/easy-security-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Javier Eguiluz",
            "email": "javiereguiluz@gmail.com"
        },
        {
            "name": "Project Contributors",
            "homepage": "https://github.com/EasyCorp/easy-security-bundle"
        }
    ],
    "require": {
        "php"                           : ">=5.3.0",
        "symfony/dependency-injection"  : "~2.3|~3.0",
        "symfony/http-foundation"       : "~2.3|~3.0",
        "symfony/http-kernel"           : "~2.3|~3.0",
        "symfony/security"              : "~2.6|~3.0",
        "symfony/security-bundle"       : "~2.6|~3.0"
    },
    "autoload": {
        "psr-4": { "EasyCorp\\Bundle\\EasySecurityBundle\\": "" },
        "exclude-from-classmap": ["/Tests/"]
    }
}
